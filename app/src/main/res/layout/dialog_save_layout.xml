<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_window_bg"
    android:gravity="center_vertical|center_horizontal"
    android:id="@+id/ll_index"
    >
    <LinearLayout
        android:id="@+id/ll_windows_index"
        android:layout_width="@dimen/app_window_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/fw_circular_smaill"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="36dp"
            android:paddingLeft="@dimen/app_padding"
            android:paddingRight="@dimen/app_padding"
            >
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="是否保存？"
                android:textSize="16sp"
                android:textColor="@color/app_black_left"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_et_height"
                android:layout_marginTop="@dimen/app_margin"
                android:background="@drawable/app_et_stroke_bg"
                android:hint="@string/anim_edit_save_dialog_edit_hint"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                >

            </EditText>
            <LinearLayout
                android:id="@+id/bt_continue"
                android:layout_width="@dimen/app_button_width"
                android:layout_height="@dimen/app_button_height"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/app_padding_small"
                android:layout_marginTop="@dimen/app_margin"
                android:background="@drawable/app_ripple_gray"
                >
                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="确认"
                    android:textSize="16sp"
                    android:textColor="@color/app_black_left"
                    android:layout_marginLeft="@dimen/app_margin_small"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bt_cancel"
                android:layout_width="@dimen/app_button_width"
                android:layout_height="@dimen/app_button_height"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/app_padding_small"
                android:background="@drawable/app_ripple_gray"
                >
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="取消"
                    android:textSize="16sp"
                    android:textColor="@color/app_black_left"
                    android:layout_marginLeft="@dimen/app_margin_small"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>