<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_ripple_gray"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_padding_big"
        android:paddingRight="@dimen/app_padding_big"
        android:paddingTop="@dimen/app_padding"
        android:paddingBottom="@dimen/app_padding"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEXT"
            android:textColor="@color/app_index_item_text"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>